.col-md-4.mb-3
  .card
    .card-header
      .fa.fa-graduation-cap
      = link_to course.title, course_path(course)
    .card-body
      %small= simple_format(course.short_description)
    .card-footer
      .fa.fa-book
        = course.lessons.count
    .card-footer
      .text-center
        .fa.fa-money-bill
        = number_to_currency(course.price)
    .card-footer
      .row
        .col-md-6
          .fa.fa-globe-africa
          = course.language
        .col-md-6
          .text-end
            .fa.fa-signal
            = course.level
   
    .card-footer
      .row
        .col-md-6
          .far.fa-clock
          = course.created_at.strftime('%d-%b-%Y')
        .col-md-6
          .text-end
            .fa.fa-chalkboard-teacher
            = link_to course.user.username, user_path(course.user)
  - if current_user
    - if policy(course).edit?
      .card-footer
      = link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' if policy(course).edit?
      // - if policy(course).destroy?
      = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
        